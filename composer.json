{
    "name": "albeertito7/php-bootstrap",
    "version": "0.1.0",
    "description": "PHP Bootstrap template",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "bootstrap",
        "skeleton",
        "php",
        "bolerplate",
        "TDD"
    ],
    "authors": [
        {
            "name": "Albert PÃ©rez Datsira",
            "email": "albertperezdatsira@gmail.com",
            "homepage": "https://albeertito7.github.io",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Albeertito7\\PhpBootstrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Albeertito7\\PhpBootstrapTest\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.4",
        "composer/semver": "^3.3"
    },
    "scripts": {
        "phpunit": "phpunit",
        "phpunit-coverage-xml": "phpunit --stop-on-error --stop-on-failure --coverage-clover phpunit.coverage.xml",
        "__comment": "generate a coverage report in the clover format writting at the phpunit.coverage.xml outputfile"
    }
}
